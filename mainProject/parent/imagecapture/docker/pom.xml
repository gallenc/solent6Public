                <version>1.6.0</version>

                <executions>
                    <execution>
                        <id>Building Docker Image</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <commandlineArgs>buildDockerImage.sh</commandlineArgs>
